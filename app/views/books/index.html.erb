<div class="container">
  <div class="row">
    <div class="col-xs-12">
      
      <div class="notice">
        <% if notice %>
          <%= notice %>
        <% end %>
      </div>
      <section class="books-index">
        <h1 class="page-header">Books</h1>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th><th>Body</th><th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= book.title%></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm"=>"Are you sure?" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>

      <section class="book-new">
        <h1 class="page-heading">New Book</h1>
        <%= form_with model: @book_new, local: true do |f| %>
          <div class="form-group">
            <%= f.label :title, class: "control-labael"%><br>
            <%= f.text_field :title, class: "form-inline" %><br>
            <%= f.label :body, class: "contorl-label" %><br>
            <%= f.text_area :body, class: "form-inline" %><br>
            <%= f.submit "Create Book", class: "btn btn-default" %>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>